{
  "manifest_version": 3,
  "name": "Meeting Tab Closer",
  "version": "1.1.0",
  "description": "Auto-closes Microsoft Teams & Zoom \"join meeting\" tabs after a delay, with on-page cancelable countdown overlay.",
  "permissions": [
    "tabs",
    "storage",
    "scripting"
  ],
  "host_permissions": [
    "*://*.zoom.us/*",
    "*://join.zoom.us/*",
    "*://teams.microsoft.com/*",
    "*://teams.live.com/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_title": "Meeting Tab Closer",
    "default_popup": "popup.html"
  },
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}