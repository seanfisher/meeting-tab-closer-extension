{
  "manifest_version": 3,
  "name": "Meeting Tab Closer",
  "version": "1.0.0",
  "description": "Auto-closes Microsoft Teams & Zoom \"join meeting\" tabs after a short delay.",
  "permissions": [
    "tabs",
    "storage"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_title": "Meeting Tab Closer",
    "default_popup": "popup.html"
  },
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}